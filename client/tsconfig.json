{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2021",
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@commonStyles/*": ["src/commonStyles/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["src/models/*"],
      "@constants/*": ["src/constants/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}