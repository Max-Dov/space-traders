{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2021",
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      // duplicating entries as otherwise root index.ts files won't be recognised
      "commonStyles/*": ["src/commonStyles/*"],
      "commonStyles": ["src/commonStyles"],
      "@features/*": ["src/features/*"],
      "@features": ["src/features"],
      "@shared/*": ["src/shared/*"],
      "@shared": ["src/shared"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@zustand/*": ["src/zustand/*"],
      "@zustand": ["src/zustand"],
      "@svgs/*": ["public/assets/svg/*"]
    }
  },
  "include": [
    "src",
    "public",
    "./types.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}